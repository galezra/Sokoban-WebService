<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>
		<!-- Database connection settings -->
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<!-- לוקל הוסט זה האי פי של הסרבר -->
			<property name="connection.url">jdbc:sqlserver://localhost:1433;database=SokobanDB;integratedSecurity=true;</property>
																	 <!-- jdbc:sqlserver://localhost\MSSQLSERVER03:1433;database=SokobanDB;integratedSecurity=true; -->
			
			<!-- JDBC connection pool (use the built-in) -->
			<property name="connection.pool_size">1</property>
			
			<!-- SQL dialect -->
			<property name="dialect">org.hibernate.dialect.SQLServer2012Dialect</property>
			
			<!-- Echo all executed SQL to stdout -->
			<property name="show_sql">true</property>
			
			<!-- השם שלה טבלה במפינג -->
			<mapping class="com.gal.db.SokobanSolution"></mapping>
	</session-factory>
</hibernate-configuration>